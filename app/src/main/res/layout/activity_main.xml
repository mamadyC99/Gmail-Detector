<!--
ESTE ARCHIVO DEFINE C칍MO SE VE LA PANTALLA

쯈U칄 CONTIENE?
1. Un t칤tulo "Gmail Detector"
2. Un 치rea de texto grande para mostrar el estado
3. Un bot칩n para configurar permisos
4. Dise침o simple y claro

Es como HTML pero para Android
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#F5F5F5">
    <!-- 
    LinearLayout = elementos uno debajo del otro (vertical)
    match_parent = usar todo el espacio disponible
    padding = espacio interno de 20dp (como margin en CSS)
    background = color de fondo gris claro
    -->

    <!-- 
    T칈TULO DE LA APP
    -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="游닎 Gmail Detector"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="4dp" />
    <!-- 
    TextView = elemento para mostrar texto
    wrap_content = altura ajustada al contenido
    textSize="28sp" = tama침o de letra grande
    textStyle="bold" = texto en negrita
    gravity="center" = centrar el texto
    layout_marginBottom = espacio debajo del elemento
    elevation = sombra (efecto 3D)
    -->

    <!-- 
    츼REA DE ESTADO PRINCIPAL
    Aqu칤 se muestra si est치 funcionando o no
    -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="20dp">
        <!-- 
        ScrollView = permite hacer scroll si el texto es muy largo
        layout_weight="1" = usar todo el espacio disponible
        -->

        <TextView
            android:id="@+id/texto_estado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="游댃 Verificando estado..."
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:padding="20dp"
            android:background="#FFFFFF"
            android:textColor="#333333"
            android:fontFamily="monospace"
            android:elevation="2dp" />
        <!-- 
        android:id="@+id/texto_estado" = ID para encontrarlo desde Java
        lineSpacingExtra = espacio extra entre l칤neas
        fontFamily="monospace" = letra de c칩digo (m치s f치cil de leer)
        -->

    </ScrollView>

    <!-- 
    BOT칍N DE CONFIGURACI칍N
    -->
    <Button
        android:id="@+id/boton_configurar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="游댢 Configurar Permisos"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="#2196F3"
        android:textColor="#FFFFFF"
        android:elevation="4dp"
        android:layout_marginBottom="16dp" />
    <!-- 
    android:id="@+id/boton_configurar" = ID para encontrarlo desde Java
    background="#2196F3" = color azul
    textColor="#FFFFFF" = texto blanco
    -->

    <!-- 
    TEXTO DE AYUDA
    -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="游눠 Tip: Usa 'adb logcat | grep GmailDetector' para ver logs en tiempo real"
        android:textSize="12sp"
        android:textColor="#666666"
        android:gravity="center"
        android:background="#E3F2FD"
        android:padding="12dp"
        android:layout_marginTop="8dp" />
    <!-- 
    textColor="#666666" = gris oscuro
    background="#E3F2FD" = azul muy claro
    -->

</LinearLayout>